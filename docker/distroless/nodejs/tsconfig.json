{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "declaration": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node"]
  },
  "include": ["docker-entrypoint.ts"],
  "exclude": ["**/node_modules"]
}
